  float R = ballSize/2;
  PVector clamp(PVector v){
     
     float x = v.x, y = v.y;
     if(v.x - R < 0) x = R;
     if(v.x + R> width) x = width - R;
     if(v.y - R < 0) y = R;
     if(v.y + R > height) y = height - R; 
     return new PVector(x, y);
  }
}
